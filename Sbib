    function explode(e) {
      const btn = e.currentTarget;
      alert("You just said yes‚Ä¶ no takebacks üòè‚ù§Ô∏è");

      for (let i = 0; i < 35; i++) {
        const heart = document.createElement("div");
        heart.className = "heart";
        heart.innerHTML = ["‚ù§Ô∏è","üíñ","üî•","üíã"][Math.floor(Math.random()*4)];
        heart.style.left = "50%";
        heart.style.top = "50%";
        heart.style.setProperty("--x", (Math.random()-0.5)*350 + "px");
        heart.style.setProperty("--y", (Math.random()-1)*350 + "px");
        btn.appendChild(heart);
        setTimeout(() => heart.remove(), 1600);
      }
    }
